{
  "name": "webapp",
  "version": "1.0.0",
  "private": true,
  "description": "Django & Webpack Encore",
  "repository": "https://github.com/TropicalRaisel/django-encore-webapp.git",
  "license": "MIT",
  "author": "TropicalRaisel",
  "scripts": {
    "serve": "webpack-dashboard -- encore dev-server",
    "dev": "encore dev",
    "watch": "encore dev --watch",
    "build": "encore production --progress",
    "env": "conda env export -f environment.yml",
    "purge": "npm cache clean --force && yarn cache clean --force",
    "stats": "webpack --profile --json > stats.json",
    "lint:md": "markdownlint-cli2 README.md && markdown-link-check README.md && markdown-table-formatter -c README.md",
    "fix:md": "markdownlint-cli2-fix README.md && markdown-table-formatter README.md",
    "lint:js": "eslint --ext .js,.jsx --cache .",
    "fix:js": "eslint --ext .js,.jsx --cache --fix .",
    "lint:css": "stylelint --cache assets/styles/*.{css,scss,sass}",
    "fix:css": "stylelint --cache --fix assets/styles/*.{css,scss,sass}",
    "lint:json": "eslint --ext .json --cache .",
    "fix:json": "eslint --ext .json --cache --fix .",
    "lint:py": "black app/ core/ --check",
    "fix:py": "isort --atomic . && black app/ core/",
    "lint:html": "djlint app/templates",
    "fix:html": "djlint app/templates --reformat",
    "lint": "yarn lint:js && yarn lint:css && yarn lint:py && yarn lint:html && yarn lint:json && yarn lint:md",
    "postinstall": "husky install && husky set .husky/pre-commit \"yarn dlx lint-staged\""
  },
  "lint-staged": {
    "*.{js,jsx}": "yarn lint:js",
    "*.{css,scss,sass}": "yarn lint:css",
    "*.html": "yarn lint:html",
    "*.md": "yarn lint:md",
    "*.json": "yarn lint:json",
    "*.py": "yarn lint:py",
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@popperjs/core": "^2.9.3",
    "bootstrap": "^5.1.0",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "@symfony/webpack-encore": "^1.5.0",
    "autoprefixer": "^10.3.3",
    "circular-dependency-plugin": "^5.2.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsonc": "^1.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "husky": "^7.0.0",
    "image-minimizer-webpack-plugin": "^2.2.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^9.0.0",
    "javascript-obfuscator": "^2.19.0",
    "markdown-link-check": "^3.8.7",
    "markdown-table-formatter": "^1.2.0",
    "markdownlint": "^0.24.0",
    "markdownlint-cli2": "^0.3.0",
    "mini-svg-data-uri": "^1.3.3",
    "npm-check-updates": "^11.8.3",
    "postcss-loader": "5.0.0",
    "sass": "~1.32.12",
    "sass-loader": "^12.1.0",
    "sort-package-json": "^1.50.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-twbs-bootstrap": "^2.2.3",
    "stylelint-webpack-plugin": "^3.0.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-dashboard": "^3.3.5",
    "webpack-notifier": "^1.13.0",
    "webpack-obfuscator": "^3.4.1",
    "webpack-open-browser-plugin": "^1.0.7",
    "webpackbar": "^5.0.0-3",
    "workbox-webpack-plugin": "^6.2.4"
  }
}
